{
  "compilerOptions": {
    "target": "ES2015",                                  
    /* Modules */
    "module": "CommonJS",    
    "lib": ["es2015"],
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,     
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,                                     
    "skipLibCheck": true  ,                             
    "outDir": "./dist",
    "types": ["node", "ts-node"],
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src/**/*"]
}
